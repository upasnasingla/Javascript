<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arrays</title>
</head>
<body>
    <script>
        //Arrays are used to store many values of same or different data types
        //Arrays are mutable i.e can be changed
        let arr=[1,2,3,4,5,null,"absent",];
        console.log(arr);

        //Accessing elements
        console.log(arr[0]);
        console.log(arr[7]);  //since no value present so undefined

        //Checking length of array
        console.log(arr.length);

        //Adding  value in array
        arr[7]="present";
        console.log(arr[7]);
        console.log(arr.length);
        arr[8]=" ";
        console.log(arr[8]);
        console.log(arr.length);

        //Changing preexisyting value
        arr[0]=10;
        console.log(arr);

        //Type of
        console.log(typeof arr);

        //Accessing elements using for loop
        for(let i=0;i<arr.length;i++){
            console.log(arr[i]);
        }
    </script>

</body>
</html>
