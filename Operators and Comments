    <script>
        //fragment of code that produces value is expression
        Arithmetic operators
        let a=45;
        let b=4;
        console.log("a+b = ",a+b);
        console.log("a-b = ",a-b);
        console.log("a*b = ",a*b);   
        console.log("a/b = ",a/b); //gives full value even after decimal unlike c++
        console.log("a**b = ",a**b); // 45 power 4
        console.log("a%b = ",a%b);    //gives remainder
        console.log("a++ = ",a++);  //post increment  
        console.log("a= ",a);
        console.log("a-- = ",a--);
        console.log("a= ",a);
        console.log("++a= ",++a); //pre increment


        //Assignment operators
        let a=10;
        let b=01;   //prints 1
        b=100;   //assignment operator
        console.log(b);
        console.log(a+=1);
        console.log(a-=1);
        console.log(a*=1);
        console.log(a/=1);
        console.log(a%=1);
        console.log(a**=1);   //means a=a**1

         
        //Comparison Operators
        let comp1=6;
        let comp2="6";
        console.log(comp1==comp2);//compares value only
        console.log(comp1!=comp2);   //compares  value only
        console.log(comp1===comp2);   //compares data type and value both
        console.log(comp1!==comp2);  //compares data type and value both
        console.log(comp1>comp2);

        //Logical Operators
        let a=5;
        let b=8;
        console.log(a<b && a==5);   //both conditions true so true  
        console.log(a>b || b==8);   //either condition true so true
        console.log(!false); //negates the value


        //Comments  ->not included in code
      //   single line commments 
         //Comments 
      /*  multi line comments   */
        /*this
        is 
        a 
        multi line */



    </script>
