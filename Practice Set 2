    <script>
        //Q1:Use logical operators to find if persons age lies b/w 10 and 20
        var a=prompt("tell your age");  
        
        if(a>10 && a<20){
            console.log("age is under conditions");
        }
         else{
             console.log("age is not under condition");
        }
        
        //Q2:demonstrate use of switch case for above question
        a=Number.parseInt(a);   //converted to number and now no need to convert in switch case age to string
        switch(a){
            case '12':  //converted to string bcoz prompt input is string
                console.log("age is 12");
                break;
            case '13':
                console.log("age is 13");
                break;
            case '14':
                console.log("age is 14");
                break;
            default:
                console.log("not special");
                break;
        }

        //Q3:program to see if no is divisible by 2 and 3
        var no=15;
        if(no%2==0 && no%3==0){
            console.log("divisible by both");

        }
        else{
            console.log("not divisible");
        }

        //Q4:program to see if no is divisible by 2 or 3
        var no=15;
        if(no%2==0 || no%3==0){
            console.log("divisible by either");

        }
        else{
            console.log("not divisible");
        }

        //Q5:using ternary operator print you can drive or not
        var age=9;
        console.log("you can",age>18?"drive":"not drive");
          
        var age=50;
        var a=age>18?"can drive":"can't drive";
        console.log(a);



        


        
    </script>
    
